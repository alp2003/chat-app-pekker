{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "../../packages/shared/src/*"
      ]
    },
    "noEmit": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register",
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}