{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:network": "./dev-network.sh",
    "build": "turbo run build",
    "start": "docker compose up --build",
    "start:app-only": "docker compose -f docker-compose.yml up --build api web",
    "update-ip": "./update-ip.sh",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "audit": "pnpm audit --audit-level moderate",
    "depcheck": "turbo run depcheck",
    "db:validate": "pnpm --filter api prisma validate",
    "db:migrate:status": "pnpm --filter api prisma migrate status",
    "db:migrate": "pnpm --filter api prisma migrate dev",
    "ci:checks": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "ci:test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "ci:build": "pnpm run build",
    "ci:audit": "pnpm run audit && pnpm run depcheck",
    "ci:db": "pnpm run db:validate && pnpm run db:migrate:status",
    "ci:all": "pnpm run ci:checks && pnpm run ci:test && pnpm run ci:build && pnpm run ci:audit && pnpm run ci:db"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^9.33.0",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "@playwright/test": "^1.48.0",
    "depcheck": "^1.4.7",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  }
}
